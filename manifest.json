{
  "manifest_version": 2,
  "name": "Real-Debrid",
  "description": "Real-Debrid Google Chrome Extension",
  "version": "1.5.1",
  "icons" : {
    "16" : "icons/icon-16.png",
    "64" : "icons/icon-64.png",
    "128" : "icons/icon-128.png",
    "256" : "icons/icon-256.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "downloads",
    "storage",
    "notifications",
    "https://real-debrid.com/"
  ],
  "background": {
    "scripts": [
      "libs/jquery.min.js",
      "src/background.js"
    ]
  }
}